//https://aka.ms/tsconfig
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    //features/tsconfig has its own paths, but cucumber-js still needs this
    "paths": {
      "@src/*": ["./src/*"],
      "@support/*": ["./features/support/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
