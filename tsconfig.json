//https://aka.ms/tsconfig
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    // "baseUrl": "src",
    "declaration": true,
    "outDir": "dist",
    "paths": {
      //features/tsconfig has its own paths, but cucumber-js still needs this
      "@src/*": ["./src/*"],
      "@support/*": ["./features/support/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
